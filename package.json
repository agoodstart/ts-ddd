{
  "name": "ts-auth",
  "version": "1.0.0",
  "description": "architectural approach to creating a sign in flow",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "test": "nyc --clean --all --require ts-node/register --require tsconfig-paths/register --require reflect-metadata/Reflect --extension .ts -- mocha --exit --timeout 5000",
    "test:all": "npm test __tests__/**/*.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express-promise-router": "^2.0.1",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/webpack-env": "^1.15.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-http": "^4.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.9",
    "@types/faker": "^5.1.4",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.9",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "faker": "^5.1.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^4.1.2"
  },
  "_moduleAliases": {
    "@pbb": "dist"
  },
  "nyc": {
    "exclude": [
      "__tests__/**/*.spec.ts",
      "dist/**"
    ]
  }
}
